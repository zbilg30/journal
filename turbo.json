{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "outputs": ["apps/web/src/generated/**"],
      "cache": false
    }
  }
}
